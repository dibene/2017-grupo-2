<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}SEGC - Hospital San Martin{% endblock %}</title>
        {% block stylesheets %}
          <link href="{{ asset('css/materialize.css') }}" rel="stylesheet"/>
          <!--Import Google Icon Font-->
          <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
          <!--Import materialize.css-->
          <link type="text/css" rel="stylesheet" href="css/materialize.min.css"  media="screen,projection"/>

        {% endblock %}
    </head>
    <body>
      <!-- nav bar -->
      <nav class="red lighten">
    		<div class="nav-fixed">
          <a href="/" class="brand-logo" >   <img src="/image/logo.jpeg" alt="" height="65" width="90"></a>
          <a href="/" class="brand-logo" style="margin-left:100px"> SEGC </a>

          <ul id="nav-mobile" class="right hide-on-med-and-down">
            {% if is_granted("IS_AUTHENTICATED_FULLY") %}
            <!-- ver si tiene permiso para ver pacientes y medicos -->
              {% if is_granted('ROLE_ADMIN') %}
                <li><a href="/medico">Medicos</a></li>
              {% endif %}
              {% if is_granted('ROLE_MEDICO') %}
                <li><a href="/paciente">Pacientes</a></li>
                <li><a href="/estudio/realizados">Estudios Realizados</a></li>
                <li><a href="/estadisticas">Estadisticas</a></li>
              {% endif %}
                <!-- link al perfil solo si esta logueado -->
                <li><a href="/profile"> {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} </a> </li>
                <li>
                  <a href="{{ path('fos_user_security_logout') }}">
                      {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                  </a>
                </li>
            {% else %}
                <li>
                  <a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
                </li>
                <li>
                  <a href="/register"> Registrar </a>
                </li>
            {% endif %}

          </ul>
        </div>
      </nav>
      <!-- nav bar -->

        <div>

        </div>

        {% if app.request.hasPreviousSession %}
            {% for type, messages in app.session.flashBag.all %}
                {% for message in messages %}
                    <div class="{{ type }}">
                        {{ message|trans({}, 'FOSUserBundle') }}
                    </div>
                {% endfor %}
            {% endfor %}
        {% endif %}


        <div>
    {% for flashMessage in app.session.flashbag.get('mensaje') %}
      <div class="alert alert-success" role="alert">
        <div class="container">{{flashMessage}} </div>
      </div>
    {% endfor %}
          {% block body %}
          {% block fos_user_content %}{% endblock %}
          {% endblock %}
        </div>



        <footer class="page-footer red lighten-1" style="margin-top:50px;">
          <div class="footer-copyright red lighten">
            <div class="container">
              Hospital  San Martín.
              <a class="grey-text text-lighten-4 right">Sistema de Gestión de Estudios Cardiológicos Ingenieria de Software Aplicada 2018</a>
            </div>
          </div>
        </footer>

        {% block javascripts %}
          <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
          <script type="text/javascript" src="{{ asset('js/materialize.js') }}"></script>
          <script type="text/javascript" src="{{ asset('js/funciones.js') }}"></script>

        {% endblock %}
    </body>

</html>
