{% extends 'base.html.twig' %}

{% block body %}
    <h1>Pacientes</h1>
    <div class="row">
      <div class="input-field col s3">
        <input id="firstName" type="text" name='firstName' class="validate" pattern="[A-Za-z]+" >
        <label for="firstName">Nombre</label>
      </div>
      <div class="input-field col s3">
        <input  id="lastName" type="text" name='lastName' class="validate" pattern="[A-Za-z]+" >
        <label for="lastName">Apellido</label>
      </div>
      <div class="input-field col s3">
        <input id="docNumber" type="number" name='docNumber' class="validate" min="1000000" max="1000000000" >
        <label for="docNumber">DNI</label>
      </div>
      <div class="col s3">
        <button class="btn waves-effect waves-light red" type="submit" style="margin-top: 25px" >Buscar
          <i class="material-icons right">search</i>
        </button>
      </div>
    </div>

    <table class="stripped">
        <thead>
            <tr>
              <th>Nombre</th>
              <th>Apellido</th>
              <th>Dni</th>
              <th>Direccion</th>
              <th>Sexo</th>
              <th>Nacionalidad</th>
              <th>Localidad</th>
              <th>Fecha de Nacimiento</th>
                <th>Obra Social</th>
                <th>Fecha de Ingreso</th>
                <th>Internacion</th>
                <th>Ver</th>
                <th>Editar</th>
                <th>Agregar Estudio</th>
            </tr>
        </thead>
        <tbody>
        {% for paciente in pacientes %}
            <tr>
              <td>{{ paciente.nombre }}</td>
              <td>{{ paciente.apellido }}</td>
              <td>{{ paciente.dni }}</td>
              <td>{{ paciente.direccion }}</td>
              <td>{{ paciente.sexo }}</td>
              <td>{{ paciente.nacionalidad }}</td>
              <td>{{ paciente.localidad }}</td>
              <td>{% if paciente.fechaNacimiento %}{{ paciente.fechaNacimiento|date('Y-m-d') }}{% endif %}</td>
                <td>{{ paciente.obraSocial }}</td>
                <td>{% if paciente.fechaIngreso %}{{ paciente.fechaIngreso|date('Y-m-d') }}{% endif %}</td>
                <td>{{ paciente.internacion }}</td>
                <td><a class="btn-floating btn-small waves-effect waves-light blue" href="{{ path('paciente_show', { 'id': paciente.id }) }}"><i class="material-icons">zoom_in</i></a></td>
                <td><a class="btn-floating btn-small waves-effect waves-light yellow" href="{{ path('paciente_edit', { 'id': paciente.id }) }}"><i class="material-icons">create</i></a> </td>
                <td><a class="btn-floating btn-small waves-effect waves-light green" href="{{ path('estudio_index', { 'id': paciente.id }) }}"><i class="material-icons">add_circle_outline</i></a></td>

            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
          <a class="btn-floating btn-large waves-effect waves-light green" href="{{ path('paciente_new') }}"><i class="material-icons">person_add</i></a>Crear Nuevo Paciente
        </li>
    </ul>
{% endblock %}
