    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Observacion</th>
                <th>Nombre</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for motivoSolicitud in motivoSolicituds %}
            <tr>
                <td><a href="{{ path('motivosolicitud_show', { 'id': motivoSolicitud.id }) }}">{{ motivoSolicitud.id }}</a></td>
