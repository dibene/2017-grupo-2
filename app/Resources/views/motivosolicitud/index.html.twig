                <td>{{ motivoSolicitud.nombre }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('motivosolicitud_show', { 'id': motivoSolicitud.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('motivosolicitud_edit', { 'id': motivoSolicitud.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('motivosolicitud_new') }}">Create a new motivoSolicitud</a>
        </li>
    </ul>
{% endblock %}
