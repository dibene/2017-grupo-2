{% extends 'base.html.twig' %}

{% block body %}
<br><a class="btn waves-effect waves-light red" style="margin-left:10px; margin-bottom:20px; " href="{{ path('paciente_index') }}">Volver al listado de pacientes: </a>

<br><a class="btn waves-effect waves-light red lighten-1" style="margin-left:10px; margin-bottom:20px; " href="{{ path('estudio_index', { 'id': paciente.id }) }}">Volver a estudios del paciente: <b>{{paciente.nombre}} </b> </a>

<div class="container col s12 center-align" >

  <div class="z-depth-1 grey lighten-4 row left-align col s12" style="display: inline-block; margin: 50px; padding: 32px 48px 50px 48px; border: 1px solid #EEE;">

<h4 class="red-text">Estudios para agregar al paciente: <b> {{paciente.nombre}} </b></h4>
<ul>
{% for estudio in nombreEstudios %}
<li>

   <a href="{{ path(estudio.link~'_new', { 'id': paciente.id }) }}">{{estudio.nombre}}</a>

</li>
{% endfor %}
</ul>


</div>
</div>
{% endblock %}
