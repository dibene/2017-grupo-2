    <table class="highlight">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Observacion</th>
                <th>Fecha alta</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for estudio in paciente.getEstudios() %}
            <tr>
                <td><a href="{{ path(estudio.getEstudioConfiguracion().link~'_show', { 'id': estudio.id }) }}">{{ estudio.getEstudioConfiguracion().nombre }}</a></td>
