{% extends 'base.html.twig' %}

{% block body %}
<br><a class="btn waves-effect waves-light red" style="margin-left:10px"href="/estudio/{{paciente.id}}">Volver a estudios del paciente: <b>{{paciente.nombre}} </b> </a>
<h3  class="red-text"> Estudio {{ estudio.estudioConfiguracion.nombre }}</h3>

<h3> Datos del Medico </h3>
<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Matricula</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>{{ medico.nombre }}</td>
      <td>{{ medico.apellido }}</td>
      <td>{{ medico.matricula }}</td>
    </tr>
  </tbody>
</table>

<h3> Datos del Paciente </h3>
<table class="stripped">
    <thead>
        <tr>
          <th>Nombre</th>
          <th>Apellido</th>
          <th>Dni</th>
          <th>Direccion</th>
          <th>Sexo</th>
          <th>Nacionalidad</th>
          <th>Localidad</th>
          <th>Fecha de Nacimiento</th>
            <th>Obra Social</th>
            <th>Fecha de Ingreso</th>
            <th>Internacion</th>
        </tr>
    </thead>
    <tbody>
        <tr>
          <td>{{ paciente.nombre }}</td>
          <td>{{ paciente.apellido }}</td>
          <td>{{ paciente.dni }}</td>
          <td>{{ paciente.direccion }}</td>
          <td>{{ paciente.sexo }}</td>
          <td>{{ paciente.nacionalidad }}</td>
          <td>{{ paciente.localidad }}</td>
          <td>{% if paciente.fechaNacimiento %}{{ paciente.fechaNacimiento|date('Y-m-d') }}{% endif %}</td>
            <td>{{ paciente.obraSocial }}</td>
            <td>{% if paciente.fechaIngreso %}{{ paciente.fechaIngreso|date('Y-m-d') }}{% endif %}</td>
            <td>{{ paciente.internacion }}</td>
        </tr>
    </tbody>
</table>

    <table>
        <tbody>

            <tr>
                <th>Conclusion</th>
                <td>{{ estudio.conclusion }}</td>
            </tr>
            <tr>
                <th>Fecha alta</th>
                <td>{% if estudio.fechaAlta %}{{ estudio.fechaAlta|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Resultado</th>
                <td>{{   estudio.resultado  }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
          <a class="btn waves-effect waves-light red" style="margin-left:10px; margin-bottom:20px; "href="/estudio/{{paciente.id}}">Volver a estudios del paciente: <b>{{paciente.nombre}} </b> </a>
        </li>
        <li>
            <a href="{{ path('estudio_edit', { 'id': estudio.id }) }}">Modificar</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
