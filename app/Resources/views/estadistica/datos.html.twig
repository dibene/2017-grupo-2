      <tr>
        <td>{{r.internacion}}</td>
        <td>{{r.cantidad}}</td>
      </tr>
      {% endfor %}
    </table>
  </div>
  <div class="col s6">
    <h6 class="red-text left-align "><b>Localidades:</b> </h6>
