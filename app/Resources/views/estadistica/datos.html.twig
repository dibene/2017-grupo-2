{% extends 'base.html.twig' %}

{% block body %}
<div class="row col s12">

{{ form_start(form) }}
<div class="row">
  <div class="input-field col s3">
    {{ form_row(form.fdesde) }}
  </div>
  <div class="input-field col s3">
    {{ form_row(form.fhasta) }}
  </div>
  <div class="col s3">
    {{ form_row(form.generar) }}
  </div>
</div>
{{ form_end(form) }}
<a class="btn waves-effect waves-light blue" style="margin-left:10px; margin-bottom:20px; " href="{{ path('datos_pdf' , { 'fdesde': fdesde|date('Y-m-d') , 'fhasta':fhasta|date('Y-m-d')} ) }}">Imprimir</b> </a>

  <div class="container col s12 center-align" >
    <div class="z-depth-1 grey lighten-4 row left-align col s12" style="display: inline-block; margin: 50px; padding: 32px 48px 50px 48px; border: 1px solid #EEE;">
      <h5 class="red-text left-align ">Informe desde: <b>{{ fdesde|date('Y-m-d') }}</b> hasta: <b>{{fhasta|date('Y-m-d')}}</b></h5> <br>
<hr>
