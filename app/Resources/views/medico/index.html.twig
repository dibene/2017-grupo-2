{% extends 'base.html.twig' %}

{% block body %}
    <h3 class="red-text">Médicos</h3>

    <table>
        <thead>
            <tr>
              <th>Nombre</th>
              <th>Apellido</th>
              <th>Dni</th>
              <th>Dirección</th>
              <th>Sexo</th>
              <th>Nacionalidad</th>
              <th>Localidad</th>
              <th>Fecha de Nacimiento</th>
                <th>Obrasocial</th>
                <th>Matrícula</th>
                <th>Especialidad</th>
            </tr>
        </thead>
        <tbody>
        {% for medico in medicos %}
            <tr>
              <td><a href="{{ path('medico_show', { 'id': medico.id }) }}">{{ medico.nombre }}</a></td>
              <td>{{ medico.apellido }}</td>
              <td>{{ medico.dni }}</td>
              <td>{{ medico.direccion }}</td>
              <td>{% if medico.sexo %}Yes{% else %}No{% endif %}</td>
              <td>{{ medico.nacionalidad }}</td>
              <td>{{ medico.localidad }}</td>
              <td>{% if medico.fechaNacimiento %}{{ medico.fechaNacimiento|date('Y-m-d') }}{% endif %}</td>
                <td>{{ medico.obraSocial }}</td>
                <td>{{ medico.matricula }}</td>
                <td>{% if medico.getEspecialidad() %}{{ medico.getEspecialidad().getNombre() }}{% endif %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
